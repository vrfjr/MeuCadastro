@{

    ViewData["Title"] = "Editar Contato";
}


<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>

</div>

<form>
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato"

    </div>
    <br />
    <div class="mb-3">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" placeholder="Digite o e-mail do contato"
    </div>
    <br />
    <div class="mb-3">
        <label for="celular">Celular</label>
        <input type="number" class="form-control" placeholder="Digite o celular do contato"
    </div>
    <br />
    <button type="submit" class="btn btn-primary w-100">Alterar</button>


    <a class="btn btn-secondary w-100" asp-asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>